    <script>
		//Change navbar color when scrolling
        $(function () {
            $(document).scroll(function () {
                var $nav = $("#mainNavbar");
                $nav.toggleClass("scrolled", $(this).scrollTop() > $nav.height());
            });
        });
		
		//Make Yandex Payment Button appear
		$().ready(function(){
			$(".yandexButton").hide();
			$(".readWarning").click(function() {
				if($(this).is(":checked")) {
